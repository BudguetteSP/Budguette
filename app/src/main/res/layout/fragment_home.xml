<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Current Month -->
        <TextView
            android:id="@+id/currentMonthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September 2025"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginBottom="16dp" />

        <!-- Monthly Budget Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/monthlyBudgetEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Monthly Budget"
                android:inputType="numberDecimal"
                android:background="@android:color/white"
                android:padding="8dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/saveBudgetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/gold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Display Budget -->
        <TextView
            android:id="@+id/displayBudgetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Budget: $0.00"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginBottom="8dp" />

        <!-- Remaining Budget -->
        <TextView
            android:id="@+id/remainingBudgetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Budget: $0.00"
            android:textSize="16sp"
            android:textColor="@color/gold"
            android:layout_marginBottom="16dp" />

        <!-- Remaining Budget Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/budgetPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/transparent" />

        <!-- Total Expenses Header -->
        <TextView
            android:id="@+id/totalExpensesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Expenses"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/categoryBreakdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Breakdown"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginBottom="16dp" />

        <!-- Expense Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/expensePieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/transparent" />

        <!-- Total Subscriptions Header -->
        <TextView
            android:id="@+id/totalSubscriptionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Subscriptions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/subscriptionBreakdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription Breakdown"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginBottom="16dp" />

        <!-- Subscription Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/subscriptionPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>



