<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Total Expenses Header -->
        <TextView
            android:id="@+id/totalExpensesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Expenses"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/categoryBreakdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Breakdown"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginBottom="16dp" />

        <!-- Expense Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/expensePieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/transparent" />

        <!-- Total Subscriptions Header -->
        <TextView
            android:id="@+id/totalSubscriptionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Subscriptions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/subscriptionBreakdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription Breakdown"
            android:textSize="16sp"
            android:textColor="@color/light_grey"
            android:layout_marginBottom="16dp" />

        <!-- Subscription Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/subscriptionPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>



